{% extends 'layouts/base.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block content %}
    <div class="overflow-auto max-h-[600px]">
        <table class="table table-xs table-pin-rows table-pin-cols">
            <thead>
            <tr class="sticky top-0">
                <th colspan="3">
                    <h1 class="text-xl">Bookings</h1>
                </th>
                <th>
                    <a href="{{ path('booking_new') }}" class="btn btn-primary">Create new</a>
                </th>
            </tr>
            <tr class="sticky top-[3rem]">
                <th>Id</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Festival</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for booking in bookings %}
                <tr class="">
                    <td>{{ booking.id }}</td>
                    <td>
                        <div class="flex items-center gap-3">
                            <div class="avatar">
                                <div class="mask mask-squircle h-12 w-12">
                                    <img
                                        src="https://img.daisyui.com/images/profile/demo/2@94.webp"
                                        alt="Avatar Tailwind CSS Component"/>
                                </div>
                            </div>
                            <div>
                                <div class="font-bold text-sm"> {{ booking.fullName }}</div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="badge badge-soft badge-info">
                            {{ booking.email }}
                        </div>
                    </td>
                    <td>
                        <div class="badge badge-soft badge-info">
                            {{ booking.festival.name }}
                        </div>
                    </td>
                    <td class="join join-vertical lg:join-horizontal">
                        <a href="{{ path('booking_show', {'id': booking.id}) }}"
                           class="btn btn-soft btn-primary join-item">show</a>
                        <a href="{{ path('booking_edit', {'id': booking.id}) }}"
                           class="btn btn-soft btn-warning join-item">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
