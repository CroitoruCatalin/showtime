{% extends 'layouts/base.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block content %}
    <header class="bg-base-100 mb-3">
        <h1 class="text-2xl font-bold">Bookings ({{ bookings|length }})</h1>
    </header>
    <div class="overflow-auto max-h-[500px]">
        <table class="table table-xs table-pin-rows table-pin-cols">
            <thead>
            <tr class="sticky top-0">
                <th>Id</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Festival</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for booking in bookings %}
                <tr class="">
                    <td>{{ booking.id }}</td>
                    <td>
                        <div class="flex items-center gap-3">
                            <div>
                                <div class="font-bold text-sm"> {{ booking.fullName }}</div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="badge badge-soft badge-info">
                            {{ booking.email }}
                        </div>
                    </td>
                    <td>
                        <div class="badge badge-soft badge-info">
                            <a href="{{ path('admin_festival_show', {'id': booking.festival.id}) }}">
                                {{ booking.festival.name }}
                            </a>
                        </div>
                    </td>
                    <td class="join join-vertical lg:join-horizontal">
                        <a href="{{ path('booking_show', {'id': booking.id}) }}"
                           class="btn btn-soft btn-primary join-item">show</a>
                        <a href="{{ path('booking_edit', {'id': booking.id}) }}"
                           class="btn btn-soft btn-warning join-item">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
