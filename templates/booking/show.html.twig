{% extends 'layouts/base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block content %}
    {% for message in app.flashes('success') %}
        <div role="alert" class="alert alert-success mb-5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>{{ message }}</span>
        </div>
    {% endfor %}
    <header class="bg-base-100 mb-3">
        <h1 class="text-xl font-bold">Booking details</h1>
    </header>
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ booking.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ booking.fullName }}</td>
        </tr>
        <tr>
            <th>Festival</th>
            <td>
                <a href="{{ path('user_festival_show', {'id': booking.festival.id}) }}">
                    <div class="avatar">
                        <div class="mask mask-squircle h-12 w-12">
                            <img
                                src="{{ asset(booking.festival.image ? 'images/'~booking.festival.image.filename : 'images/default.jpg') }}"
                                alt="Avatar Tailwind CSS Component"/>
                        </div>
                    </div>
                    {{ booking.festival.name }}
                </a>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
