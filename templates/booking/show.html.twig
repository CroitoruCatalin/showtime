{% extends 'layouts/base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block content %}

    <div class="relative w-full h-64 overflow-hidden rounded-sm shadow-lg">
        <img
            src="https://upload.wikimedia.org/wikipedia/commons/a/a5/DOOM_live_%285875994059%29.jpg"
            alt="Band Cover"
            class="object-cover w-full h-full"
        />
        <div
            class="absolute bottom-2 left-4 right-4 bg-black/20 text-white px-4 py-2 text-xl rounded-sm font-bold flex justify-between items-center">
            <span>
                {{ booking.fullName }}
            </span>
            <span class="badge badge-soft badge-info">
                {{ booking.email }}
            </span>
        </div>
    </div>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ booking.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ booking.fullName }}</td>
        </tr>
        <tr>
            <th>Festival</th>
            <td>{{ booking.festival.name }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('booking_index') }}">back to list</a>

    <a href="{{ path('booking_edit', {'id': booking.id}) }}">edit</a>

    <div class="w-[100px]">
        {{ include('booking/_delete_form.html.twig') }}
    </div>
{% endblock %}
