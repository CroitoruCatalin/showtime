{% extends 'layouts/admin-base.html.twig' %}

{% block title %}Festival: {{ festival.name }}{% endblock %}
{% block content %}
    {% for message in app.flashes('success') %}
        <div role="alert" class="alert alert-success mb-5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>{{ message }}</span>
        </div>
    {% endfor %}

    <div class="relative w-full h-64 mb-2 overflow-hidden rounded-sm shadow-lg">
        <img
            src="{{ asset(festival.image ? 'images/'~festival.image.filename : 'images/default.jpg') }}"
            alt="Band Cover"
            class="object-cover w-full h-full"
        />
        <div
            class="absolute top-2 right-4 bg-black/20 text-white px-4 py-2 text-xl rounded-sm font-bold flex justify-between items-center">
            <span></span>
            <span class="badge badge-soft badge-info">
                {{ festival.startDate|date('Y.m.d') }} - {{ festival.endDate|date('Y.m.d') }}
            </span>
        </div>
        <div
            class="absolute bottom-2 left-4 right-4 bg-black/20 text-white px-4 py-2 text-xl rounded-sm font-bold flex justify-between items-center">
            <span>
                {{ festival.name }}
            </span>
            <span class="badge badge-soft badge-info">
                {{ festival.location }}
            </span>
        </div>
    </div>

    <div class="mb-4 flex justify-between">
        <a href="{{ path('admin_festival_add_slot', {id: festival.id}) }}" class="btn btn-primary">Add Time Slot</a>
    </div>

    <h2 class="text-xl mb-2">Schedule</h2>
    <table class="table table-auto w-full mb-6">
        <thead>
        <tr>
            <th>Band</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for slot in slots %}
            <tr>
                <td>{{ slot.band.name }}</td>
                <td>{{ slot.startTime|date('m-d H:i') }}</td>
                <td>{{ slot.endTime|date('m-d H:i') }}</td>
                <td>
                    <form action="{{ path('admin_festival_delete_slot', {id: festival.id, slotId: slot.id}) }}"
                          method="post" class="inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete-slot' ~ slot.id) }}">
                        <button type="submit" class="btn btn-soft btn-warning">Remove</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No time slots scheduled</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_festival_index') }}" class="btn btn-link">Back to list</a>
    <a href="{{ path('admin_festival_edit', {id: festival.id}) }}" class="btn btn-link">Edit Festival</a>
{% endblock %}
