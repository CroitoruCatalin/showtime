{% extends 'layouts/admin-base.html.twig' %}

{% block title %}Festival index{% endblock %}

{% block content %}
    <div class="overflow-auto max-w-[700px] lg:max-w-[1000px] max-h-[600px]">
        <table class="table">
            <thead>
            <tr>
                <th colspan="6"><h1 class="text-xl">Festivals</h1></th>
                <th><a href="{{ path('admin_festival_new') }}" class="btn btn-primary">Create new</a></th>
            </tr>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Start date</th>
                <th>End date</th>
                <th>Location</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody class="">
            {% for festival in festivals %}
                <tr class="">
                    <td>{{ festival.id }}</td>
                    <td>
                        <div class="flex items-center gap-3">
                            <div class="avatar">
                                <div class="mask mask-squircle h-12 w-12">
                                    <img
                                        src="https://img.daisyui.com/images/profile/demo/2@94.webp"
                                        alt="Avatar Tailwind CSS Component"/>
                                </div>
                            </div>
                            <div>
                                <div class="font-bold"> {{ festival.name }}</div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="badge badge-soft badge-info">
                            {{ festival.startDate|date('Y-m-d') }}
                        </div>
                    </td>
                    <td>
                        <div class="badge badge-soft badge-info">
                            {{ festival.endDate|date('Y-m-d') }}
                        </div>
                    </td>
                    <td>
                        <div class="badge badge-soft badge-info">
                            {{ festival.location }}
                        </div>
                    </td>
                    <td>
                        <div class="badge badge-soft badge-info">
                            {{ festival.price }}
                        </div>
                    </td>
                    <td class="join join-vertical lg:join-horizontal">
                        <a href="{{ path('admin_festival_show', {'id': festival.id}) }}"
                           class="btn btn-soft btn-primary join-item">show</a>
                        <a href="{{ path('admin_festival_edit', {'id': festival.id}) }}"
                           class="btn btn-soft btn-warning join-item">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
