{% extends 'base.html.twig' %}

{% block title %}Band index{% endblock %}

{% block content %}
    <h1>Band index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Genre</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for band in bands %}
            <tr>
                <td>{{ band.id }}</td>
                <td>{{ band.name }}</td>
                <td>{{ band.genre.value }}</td>
                <td>
                    <a href="{{ path('app_band_show', {'id': band.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('app_band_edit', {'id': band.id}) }}" class="btn btn-secondary">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
