{{ form_start(form, { attr: { class: 'w-xs mx-auto' } }) }}
<fieldset class="fieldset bg-base-200 border-base-300 rounded-box p-4">
    <legend class="fieldset-legend">{{ form_title|default('Band details') }}</legend>

    {# Name field #}
    <label class="label" for="{{ form.name.vars.id }}">
        {{ form_label(form.name, 'Name') }}
    </label>
    {{ form_widget(form.name, {
        attr: { class: 'input input-bordered w-full', placeholder: 'Band Name' }
    }) }}
    {{ form_errors(form.name) }}

    {# Genre field #}
    <label class="label" for="{{ form.genre.vars.id }}">
        {{ form_label(form.genre, 'Genre') }}
    </label>
    {{ form_widget(form.genre, {
        attr: { class: 'select select-bordered w-full' }
    }) }}
    {{ form_errors(form.genre) }}
    <button type="submit" class="btn btn-primary mt-4 w-full">
        {{ button_label|default('Save') }}
    </button>
    {{ form_end(form) }}
    {% if band is defined and band.id %}
        {{ include('band/_delete_form.html.twig', { 'band': band }) }}
    {% endif %}
</fieldset>
